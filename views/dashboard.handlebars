<!-- dashboard.handlebars -->
<h1>Welcome to the Dashboard, {{username}}!</h1>

{{#if posts}}
  <h2>Your Blog Posts:</h2>
  <ul>
    {{#each posts}}
      <li>
        <a href="/post/{{id}}">{{title}}</a>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>You haven't created any blog posts yet.</p>
{{/if}}
