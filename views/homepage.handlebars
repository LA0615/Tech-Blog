<!-- views/homepage.handlebars -->

<h1>The Tech Blog</h1>

{{!-- Display Blog Posts --}}
<div>
  {{#if logged_in}}
    <a href="/logout">Logout</a>
  {{else}}
    <a href="/login">Login</a>
  {{/if}}

  {{#each posts}}
    <div>
      <h2>{{title}}</h2>
      <p>{{content}}</p>
      <p>Created by {{createdBy}} on {{formattedDate}}</p>
      <a href="/post/{{id}}">Read More</a>
    </div>
  {{/each}}
</div>

